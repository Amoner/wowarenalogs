{
  "name": "wowarenalogs",
  "private": "true",
  "version": "3.0.0",
  "description": "WoW Arena Logs",
  "author": "WoW Arena Logs",
  "homepage": ".",
  "main": "packages/next-desktop/build/electron/main.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start:scraper": "lerna run start:scraper --stream",
    "start:web": "lerna run start:web --stream",
    "start:desktop:react": "lerna run start:desktop:react --stream",
    "dev:web": "lerna run dev:web --stream",
    "local:web": "lerna run local:web --stream",
    "dev:desktop": "cross-env NODE_ENV=development BROWSER=none concurrently -k \"cd packages/next-desktop && next dev\" \"wait-on -d 3000 -i 5000 http://localhost:3000 && tsc -p packages/next-desktop/electron && electron .\"",
    "build:web": "lerna run build:web --stream",
    "build:desktop:windows": "shx rm -rf dist && shx rm -rf packages/next-desktop/build && tsc -p packages/next-desktop/electron && electron-builder --win --publish=never",
    "build:desktop:mac": "shx rm -rf dist && shx rm -rf packages/next-desktop/build && tsc -p packages/next-desktop/electron && electron-builder --mac --publish=never",
    "build:desktop:react": "lerna run build:desktop:react --stream",
    "release:web": "lerna run release:web --stream",
    "release:desktop": "lerna run release:desktop --stream",
    "release:desktop:react": "lerna run release:desktop:react --stream",
    "release:react": "yarn release:web && yarn release:desktop:react",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "prepare": "node -e \"process.env.NODE_ENV != 'production' && process.exit(1)\" || electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.wowarenalogs.client",
    "productName": "WoW Arena Logs",
    "extends": null,
    "files": [
      "packages/desktop/build/**/*"
    ],
    "directories": {
      "buildResources": "packages/desktop/assets"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@dealmore/craco-plugin-babel-include": "^1.0.0",
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "1.21.0",
    "@graphql-codegen/typescript-operations": "1.17.14",
    "@graphql-codegen/typescript-react-apollo": "2.2.1",
    "@octokit/core": "^3.2.5",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@types/amplitude-js": "^7.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/cheerio": "^0.22.23",
    "@types/cookie-parser": "^1.4.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-json-storage": "^4.0.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/gtag.js": "^0.0.5",
    "@types/jest": "^26.0.15",
    "@types/js-cookie": "^2.2.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/lru-cache": "^5.1.1",
    "@types/md5": "^2.2.1",
    "@types/next-auth": "^3.13.0",
    "@types/node": "^12.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/openid-client": "^3.7.0",
    "@types/passport": "^1.0.6",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-oauth2": "^1.4.10",
    "@types/pixi.js": "^5.0.0",
    "@types/react": "^17.0.0",
    "@types/react-custom-scrollbars": "^4.0.7",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.2",
    "@types/react-window-infinite-loader": "^1.0.3",
    "@types/superagent": "^4.1.10",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
