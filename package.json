    "next": "10.1.3",
    "next-auth": "^3.14.0",
    "next-i18next": "^8.3.0",
    "next-seo": "^4.24.0",
    "next-transpile-modules": "^6.4.0",
    "node-fetch": "^2.6.1",
    "nookies": "^2.5.2",
    "nprogress": "^0.2.0",
    "openid-client": "^4.4.0",
    "passport": "^0.4.1",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-oauth": "^1.0.0",
    "pixi-viewport": "^4.30.0",
    "pixi.js": "^6.1.2",
    "prop-types": "^15.x",
    "react": "^17.0.1",
    "react-cookie-consent": "^6.2.3",
    "react-custom-scrollbars": "^4.2.1",
