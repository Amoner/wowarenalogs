    "react-window-infinite-loader": "^1.0.7",
    "regenerator-runtime": "^0.13.7",
    "rxjs": "^6.6.6",
    "sqlite3": "^5.0.2",
    "superagent": "^6.1.0",
    "typescript": "^4.1.3",
    "eventemitter3": "^4.0.7",
    "line-reader": "^0.4.0",
    "lodash-es": "^4.17.20",
    "moment": "^2.29.1"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-unused-vars": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "env": {
          "browser": true,
          "es6": true,
          "node": true
        },
        "extends": [
          "react-app",
          "plugin:react/recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint",
          "prettier/react",
          "plugin:prettier/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "react/react-in-jsx-scope": "off"
        },
        "settings": {
          "react": {
            "version": "detect"
          }
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "build",
    "__generated__"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "importOrder": [
      "\\.css$",
      "^\\."
    ],
    "importOrderSeparation": true
  }
}
