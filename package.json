    "webpack-cli": "^4.5.0",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/line-reader": "^0.0.32",
    "size-limit": "^4.9.1",
    "version-bump-prompt": "^6.1.0"
  },
  "dependencies": {
    "@ant-design/charts": "^1.0.19",
    "@ant-design/dark-theme": "^2.0.2",
    "@ant-design/icons": "^4.3.0",
    "@apollo/client": "^3.3.9",
    "@craco/craco": "^6.1.0",
    "@google-cloud/firestore": "^4.9.1",
    "@google-cloud/storage": "^5.7.4",
    "@inlet/react-pixi": "^6.0.9",
    "@next-auth/firebase-adapter": "^0.1.3",
    "@sentry/react": "^6.1.0",
    "@sentry/tracing": "^6.1.0",
    "amplitude-js": "^7.4.1",
    "antd": "^4.11.2",
    "apollo-server-express": "^2.21.0",
    "apollo-server-micro": "^2.22.2",
    "aws-sdk": "^2.834.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "chokidar": "^3.4.3",
    "cookie-parser": "^1.4.5",
    "dirty-json": "^0.9.2",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^9.0.1",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
